tr(data-bind="css:{'bg-danger':hasError, 'bg-warning':hasWarning, 'bg-info':hasInfo}, visible:isVisible")
  th
    label(data-bind='text:label')
    span(data-bind='visible:isRequired') *
  td(colspan='2')
    div
      | Show models compatible with frame:
      select(data-bind="options:frames, value:selectedFrame")
    table(style='margin-top:10px;width:100%')
      tbody
        tr
          td
            label(style='margin-left: 1px; font-style: italic;')
              input(type='checkbox' title='Select or deselect all' data-bind="checked:checkAllModels")
              | Select All
    div(style='margin-bottom:5px;height:300px;overflow:auto;border:1px dotted #ccc')
      // ko foreach:entries
      div(style='padding:5px')
        label
          input(type='checkbox' data-bind='checked:isSelected')
          span(data-bind='text:value')
      // /ko

  td
    input(type='checkbox' title="Check to enable grid search on this parameter" data-bind="visible:isGridable, checked:isGrided")
tr(data-bind="css:{'bg-danger':hasError, 'bg-warning':hasWarning, 'bg-info':hasInfo}, visible:hasMessage")
  th &nbsp;
  td(colspan='3' data-bind='text:message')


