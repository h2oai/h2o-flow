// ko with:view
h2.flow-print-title(data-bind='text:name')
.flow-box
  .flow-box-body(data-bind="css:{ 'flow-hide-sidebar':isSidebarHidden }")
    .flow-box-notebook
      .container-fluid.flow-repl(data-bind="css:{ 'flow-hide-inputs':areInputsHidden, 'flow-hide-outputs':areOutputsHidden }, template:{ name:templateOf, foreach:cells }")
    .flow-box-sidebar
      // ko with:sidebar
      include sidebar.pug
      // /ko
  .flow-box-footer
    // ko with:status
    include status.pug
    // /ko
  //- This is at the bottom so that menus are not clipped.
  //- Could have been done using CSS z-index, but those can get hairy.
  .flow-box-header
    include navigation.pug
  .flow-box-blocker(data-bind="visible:isRunningAll")
    .flow-playbar
      div
        span(data-bind='text:runningCaption')
        span.flow-playbar-stop(data-bind='click:stopRunningAll')
          i.fa.fa-stop
          span STOP
      .flow-playbar-progress
        .flow-playbar-progress-bar(data-bind="style:{width:runningPercent}")
      div(style='font-size:80%' data-bind="text:runningCellInput")

