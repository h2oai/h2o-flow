  width 100%
  box-shadow 0 5px 10px rgba(0,0,0,.2)

.tt-suggestion
  padding 3px 10px
  line-height 24px
  overflow ellipsis
  &.tt-cursor
    background-color flow-color-yellow
  p
    margin 0

@media print
  .flow-print-title
    display block
  .flow-box
